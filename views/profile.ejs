<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vibely | Your Posts</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
    <div class="min-h-screen w-full p-6 md:p-10">
        <!-- Header -->
        <div class="flex justify-between items-center mb-10">
            <h1 class="text-4xl font-bold text-blue-400">Vibely</h1>
            <a href="/logout" class="px-4 py-2 bg-red-500 text-sm rounded-lg hover:bg-red-600 transition">Logout</a>
        </div>

        <!-- Welcome Message -->
        <div class="mb-8">
            <h2 class="text-2xl md:text-3xl font-semibold mb-2">Hello, <%= user.name %> ðŸ‘‹</h2>
            <p class="text-green-400">What's on your mind today?</p>
        </div>

        <!-- New Post Form -->
        <form action="/post" method="post" class="bg-zinc-800 p-6 rounded-lg w-full md:w-2/3 lg:w-1/2">
            <textarea name="content" placeholder="Share your vibe... ðŸ’¡ðŸ¤”" rows="4" class="w-full p-3 bg-zinc-900 border border-zinc-700 rounded-md resize-none focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
            <input type="submit" value="Create Post" class="mt-4 w-full py-2 bg-blue-500 hover:bg-blue-600 rounded-md font-medium cursor-pointer">
        </form>

        <!-- Posts Section -->
        <div class="mt-16">
            <h3 class="text-xl text-zinc-400 mb-4">Your Posts</h3>
            <div class="space-y-6">
                <% if(user.posts && user.posts.length > 0) { %>
                    <% user.posts.forEach(function(post){ %>
                        <div class="bg-zinc-800 p-6 rounded-lg border border-zinc-700 w-full md:w-2/3 lg:w-1/2">
                            <h4 class="text-blue-400 font-semibold mb-2">@<%= user.username %></h4>
                            <p class="text-sm leading-relaxed"><%= post.content %></p>
                            <small class="text-zinc-400 mt-2 block"><%= post.like.length %> likes</small>
                            <div class="flex gap-4 mt-4">
                                <% const isLiked = post.like.map(id => id.toString()).includes(loggedInUserId.toString()); %>
                                <a href="/like/<%= post._id %>" title="Like this post"
                                   class="group inline-flex items-center justify-center w-10 h-10 rounded-full border border-zinc-600 text-gray-400 hover:text-red-500 transition duration-300 <%= isLiked ? 'liked' : '' %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 group-[.liked]:hidden">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.014-4.5-4.5-4.5-1.636 0-3.067.876-3.875 2.194A4.494 4.494 0 0 0 6.75 3.75c-2.485 0-4.5 2.015-4.5 4.5 0 7.5 9 12 9 12s9-4.5 9-12z" />
                                    </svg>
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" class="hidden w-6 h-6 text-red-500 group-[.liked]:block">
                                        <path d="M12.001 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54l-1.45 1.31z"/>
                                    </svg>
                                </a>
                                <% if (post.user.toString() === loggedInUserId.toString()) { %>
                                    <a href="#" title="Edit post" onclick="openEditModal('<%= post._id %>', `<%- post.content %>`)"
                                       class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-zinc-600 text-gray-400 hover:text-blue-500 transition">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487a2.1 2.1 0 1 1 2.97 2.97L7.5 19.788l-4 1 1-4 12.362-12.3z" />
                                        </svg>
                                    </a>
                                    <a href="/post/delete/<%= post._id %>" title="Delete post" 
                                       onclick="return confirm('Are you sure you want to delete this post?')"
                                       class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-zinc-600 text-gray-400 hover:text-red-500 transition">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                        </svg>
                                    </a>
                                <% } %>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-zinc-500">You have no posts yet.</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Edit Modal -->
    <div id="editModal" class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center hidden z-50">
        <div class="bg-zinc-800 p-8 rounded-lg w-11/12 md:w-2/3 lg:w-1/3">
            <h3 class="text-2xl font-semibold mb-4">Edit Post</h3>
            <form id="editForm" method="post" class="flex flex-col">
                <textarea id="editContent" name="content" rows="4" class="bg-zinc-900 border border-zinc-600 p-3 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
                <div class="flex justify-end gap-4 mt-4">
                    <button type="button" onclick="closeEditModal()" class="px-4 py-2 bg-gray-600 hover:bg-gray-700 rounded-md">Cancel</button>
                    <input type="submit" value="Save Changes" class="px-4 py-2 bg-blue-500 hover:bg-blue-600 rounded-md cursor-pointer">
                </div>
            </form>
        </div>
    </div>

    <script>
        function openEditModal(postId, content) {
            document.getElementById('editForm').action = '/post/edit/' + postId;
            document.getElementById('editContent').value = content;
            document.getElementById('editModal').classList.remove('hidden');
        }

        function closeEditModal() {
            document.getElementById('editModal').classList.add('hidden');
        }
    </script>
</body>
</html>
