<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Vibely | Your Posts</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-br from-zinc-950 to-zinc-900 text-white font-sans">
  <div class="min-h-screen p-6 md:p-10">
    <!-- Header -->
    <div class="flex justify-between items-center mb-10">
      <h1 class="text-4xl font-extrabold text-blue-500 tracking-tight">Vibely</h1>
      <a href="/logout" class="px-5 py-2 bg-red-600 hover:bg-red-700 rounded-full text-sm font-medium shadow-lg transition">Logout</a>
    </div>

    <!-- Welcome -->
    <div class="mb-10">
      <h2 class="text-3xl font-semibold mb-1">Hey, <%= user.name %> üëã</h2>
      <p class="text-green-400 text-base">Feeling expressive today?</p>
    </div>

    <!-- Create Post -->
    <form action="/post" method="POST" class="bg-zinc-800 p-6 rounded-2xl shadow-lg w-full md:w-2/3 lg:w-1/2 border border-zinc-700">
      <textarea name="content" placeholder="What's on your mind? üåü" rows="4"
        class="w-full p-4 rounded-lg bg-zinc-900 border border-zinc-700 text-white placeholder:text-zinc-500 resize-none focus:outline-none focus:ring-2 focus:ring-blue-500 transition"></textarea>
      <input type="submit" value="Post Vibe" 
        class="mt-4 w-full py-2 rounded-lg bg-blue-600 hover:bg-blue-700 font-semibold transition shadow-md cursor-pointer" />
    </form>

    <!-- Posts -->
    <div class="mt-16">
      <h3 class="text-xl text-zinc-400 mb-4">Your Posts</h3>
      <div class="space-y-6">
        <% if(user.posts && user.posts.length > 0) { %>
          <% user.posts.forEach(function(post){ %>
            <div class="bg-zinc-800 p-6 rounded-xl shadow-md border border-zinc-700 w-full md:w-2/3 lg:w-1/2 hover:shadow-blue-500/10 transition">
              <h4 class="text-blue-400 font-semibold">@<%= user.username %></h4>
              <p class="mt-2 text-sm leading-relaxed text-zinc-100"><%= post.content %></p>
              <small class="text-zinc-500 mt-3 block"><%= post.like.length %> likes</small>

              <div class="flex gap-4 mt-4">
                <% const isLiked = post.like.map(id => id.toString()).includes(loggedInUserId.toString()); %>
                <a href="/like/<%= post._id %>" title="Like this post"
                  class="group inline-flex items-center justify-center w-10 h-10 rounded-full border border-zinc-600 hover:border-red-500 text-gray-400 hover:text-red-500 transition duration-300 <%= isLiked ? 'liked' : '' %>">
                  <!-- Outline Heart -->
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="w-6 h-6 group-[.liked]:hidden" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                      d="M21 8.25c0-2.485-2.014-4.5-4.5-4.5-1.636 0-3.067.876-3.875 2.194A4.494 4.494 0 0 0 6.75 3.75c-2.485 0-4.5 2.015-4.5 4.5 0 7.5 9 12 9 12s9-4.5 9-12z" />
                  </svg>
                  <!-- Filled Heart -->
                  <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="hidden w-6 h-6 text-red-500 group-[.liked]:block" viewBox="0 0 24 24">
                    <path
                      d="M12.001 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54l-1.45 1.31z" />
                  </svg>
                </a>

                <% if (post.user.toString() === loggedInUserId.toString()) { %>
                  <!-- Edit -->
                  <a href="#" title="Edit post" onclick="openEditModal('<%= post._id %>', `<%- post.content %>`)"
                    class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-zinc-600 text-gray-400 hover:text-blue-400 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M16.862 4.487a2.1 2.1 0 1 1 2.97 2.97L7.5 19.788l-4 1 1-4 12.362-12.3z" />
                    </svg>
                  </a>

                  <!-- Delete -->
                  <a href="/post/delete/<%= post._id %>" title="Delete post" onclick="return confirm('Delete this post?')"
                    class="inline-flex items-center justify-center w-10 h-10 rounded-full border border-zinc-600 text-gray-400 hover:text-red-400 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" class="w-6 h-6" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0L16.5 3m-9 0v.916c0 1.18.91 2.164 2.09 2.201h3.32c1.18-.037 2.09-1.021 2.09-2.201V3" />
                    </svg>
                  </a>
                <% } %>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-zinc-500 italic">You haven't posted anything yet. Start vibing!</p>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Edit Modal -->
  <div id="editModal" class="fixed inset-0 z-50 bg-black/60 backdrop-blur-sm hidden flex items-center justify-center">
    <div class="bg-zinc-800 p-8 rounded-xl w-11/12 md:w-2/3 lg:w-1/3 shadow-lg border border-zinc-700">
      <h3 class="text-xl font-bold mb-4">Edit Your Vibe ‚úèÔ∏è</h3>
      <form id="editForm" method="POST">
        <textarea id="editContent" name="content" rows="4"
          class="w-full p-3 bg-zinc-900 border border-zinc-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition"></textarea>
        <div class="flex justify-end gap-4 mt-4">
          <button type="button" onclick="closeEditModal()" class="px-4 py-2 bg-zinc-700 hover:bg-zinc-600 rounded-md">Cancel</button>
          <input type="submit" value="Save" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded-md cursor-pointer font-medium" />
        </div>
      </form>
    </div>
  </div>

  <script>
    function openEditModal(postId, content) {
      document.getElementById('editForm').action = '/post/edit/' + postId;
      document.getElementById('editContent').value = content;
      document.getElementById('editModal').classList.remove('hidden');
    }

    function closeEditModal() {
      document.getElementById('editModal').classList.add('hidden');
    }
  </script>
</body>
</html>
