<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'sans-serif']
          },
          colors: {
            glass: 'rgba(39, 39, 42, 0.6)'
          },
          boxShadow: {
            glow: '0 0 15px rgba(139, 92, 246, 0.6)'
          }
        }
      }
    };
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gradient-to-tr from-zinc-900 via-zinc-800 to-zinc-900 min-h-screen flex items-center justify-center font-sans relative overflow-hidden">

  <!-- Floating Glows -->
  <div class="absolute top-[-120px] left-[-120px] w-[280px] h-[280px] bg-purple-600 rounded-full opacity-20 blur-3xl animate-pulse-slow"></div>
  <div class="absolute bottom-[-120px] right-[-120px] w-[280px] h-[280px] bg-pink-500 rounded-full opacity-20 blur-3xl animate-pulse-slow"></div>

  <div class="relative w-full max-w-md p-1 rounded-3xl bg-gradient-to-br from-blue-600 via-purple-600 to-pink-500 shadow-glow">
    <div class="bg-glass rounded-[inherit] p-8 sm:p-10 backdrop-blur-lg border border-zinc-700">

      <!-- Icon -->
      <div class="w-12 h-12 mx-auto mb-4 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.657-1.343-3-3-3S6 9.343 6 11s1.343 3 3 3 3-1.343 3-3zm0 0v3m0 4v1m-6-1h12a2 2 0 002-2v-4a2 2 0 00-2-2h-1" />
        </svg>
      </div>

      <h2 class="text-3xl font-bold text-white text-center mb-2 animate-fade-in">Welcome Back</h2>
      <p class="text-zinc-400 text-center mb-6 text-sm">Please log in to your account</p>

      <% if (locals.error) { %>
        <div class="bg-red-500/20 border border-red-500/30 text-red-300 text-sm rounded-lg p-3 mb-4 text-center">
          <%= error %>
        </div>
      <% } %>

      <form action="/login" method="POST" class="space-y-5 animate-slide-in">
        <div>
          <label class="block mb-1 text-sm text-zinc-300">Email</label>
          <input 
            class="w-full px-4 py-2.5 rounded-lg bg-zinc-800/70 border border-zinc-600 text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all" 
            type="email" 
            name="email" 
            placeholder="Enter your email" 
            required 
          />
        </div>

        <div>
          <label class="block mb-1 text-sm text-zinc-300">Password</label>
          <input 
            class="w-full px-4 py-2.5 rounded-lg bg-zinc-800/70 border border-zinc-600 text-white placeholder-zinc-500 focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all" 
            type="password" 
            name="password" 
            placeholder="Enter your password" 
            required 
          />
        </div>

        <button 
          type="submit" 
          class="w-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 transition-all duration-200 py-3 rounded-lg font-semibold text-white shadow-md flex items-center justify-center gap-2 hover:shadow-purple-500/40 active:scale-95"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          Login
        </button>
      </form>

      <p class="text-center text-sm text-zinc-400 mt-6">
        Donâ€™t have an account?
        <a href="/create" class="text-blue-400 hover:text-blue-300 hover:underline transition">Create one</a>
      </p>
    </div>
  </div>

  <!-- Animations -->
  <style>
    @keyframes fade-in {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slide-in {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes pulse-slow {
      0%, 100% { transform: scale(1); opacity: 0.2; }
      50% { transform: scale(1.1); opacity: 0.4; }
    }

    .animate-fade-in {
      animation: fade-in 0.6s ease-out forwards;
    }

    .animate-slide-in {
      animation: slide-in 0.7s ease-out forwards;
    }

    .animate-pulse-slow {
      animation: pulse-slow 6s ease-in-out infinite;
    }
  </style>
</body>
</html>
